{
	"name": "FPFool",
	"version": "0.0.1",
	"description": "FPFool is an extension to fool fingerprinting websites.",
	"manifest_version": 2,
	"web_accessible_resources": [
		"data/data.json"
	],
	"background": {
		"scripts": [
			"./lib/jquery.min.js",
			"./javascripts/setup.js",
			"./javascripts/background.js"
		],
		"persistent": true
	},
	"content_scripts": [{
		"matches": ["http://*/*", "https://*/*"],
		"js": ["./lib/jquery.min.js", "./javascripts/content.js"]
	}],
	"browser_action": {
		"default_title": "FPFool",
		"default_icon": {
			"16": "res/icon16.png",
			"32": "res/icon32.png",
			"48": "res/icon48.png",
			"128": "res/icon128.png"
		}
	},
	"icons": {
		"16": "res/icon16.png",
		"32": "res/icon32.png",
		"48": "res/icon48.png",
		"128": "res/icon128.png"
	},
	"permissions": [
		"declarativeContent",
		"history",
		"http://*/*",
		"https://*/*",
		"storage",
		"tabs"
	]
}